{
  "manifest_version": 3,
  "name": "Anokha AI Agent",
  "version": "2.1",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}

